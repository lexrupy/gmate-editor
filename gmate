# TODO: Start Gmate Process Here

import sys

from GMATE.main import Gmate
from GMATE import utils

def initialize():
    utils.setup_directories()

if __name__ == "__main__":
    file_uri = None
    initialize()
    gmate = Gmate()
    args = sys.argv[1:]
    if len(args) > 0:
        file_uri = args[0]
    gmate.run(file_uri)

